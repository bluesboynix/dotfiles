layout {
    gaps 2
    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width {
        proportion 0.5;
    }

    focus-ring {
        on
        width 2
        active-color "#ffffff"
        inactive-color "#000000"
    }

    border {
        off
        width 2
        active-color "#ffffff"
        inactive-color "#000000"

        urgent-color "#ff0000"
    }

    shadow {
        // on
        softness 30
        spread 5
        offset x=0 y=5
        color "#0007"
    }

    struts {
        // left 64
        // right 64
        // top 64
        // bottom 64
    }
}
